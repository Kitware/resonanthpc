doctype xml
//- Top level SMTK template
//- From the parent directory:
    > pug ./pug/ats.pug --pretty --extension sbt -o .
SMTK_AttributeResource(Version="3")
  Includes
    File domain.sbt
    File coordinator.sbt
    File process-kernel.sbt

  Views
    View(Type="Group" Title="ATS" TopLevel="true" TabPosition="North"
      FilterByAdvanceLevel="true" FilterByCategory="false")
      Views
        View(Title="Domain")/
        View(Title="Coordinator")/
        View(Title="Process Kernel")/

    View(Type="Group" Title="Domain" Style="Tiled")
      Views
        View(Title="Mesh")/
        View(Title="Regions")/

    View(Type="Instanced" Title="Mesh")
      InstancedAttributes
        Att(Type="mesh" Name="mesh")/

    View(Type="Attribute" Title="Regions")
      AttributeTypes
        Att(Type="region")/

    View(Type="Instanced" Title="Coordinator")
      InstancedAttributes
        Att(Type="cycle driver" Name="cycle driver")/

    View(Type="Attribute" Title="Process Kernel")
      AttributeTypes
        Att(Type="pk-base")/

//- Adds newline to end of file
= "\n"
