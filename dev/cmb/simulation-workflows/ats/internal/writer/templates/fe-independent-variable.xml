<ParameterList name="${NAME}" type="ParameterList">
  <Parameter name="field evaluator type" type="string" value="independent variable" />
  <Parameter name="constant in time" type="bool" value="${CONSTANT_IN_TIME}" />
  <ParameterList name="function" type="ParameterList">
    <ParameterList name="domain" type="ParameterList">
      <Parameter name="region" type="string" value="${REGION}" />
      <!-- can be component or components (string or array(string)) -->
      <Parameter name="${COMPONENT_NAME}" type="${COMPONENT_TYPE}" value="${COMPONENTS}" />
      <ParameterList name="function" type="ParameterList">
        <ParameterList name="function-constant" type="ParameterList">
          <Parameter name="value" type="double" value="${VALUE}" />
        </ParameterList>
      </ParameterList>
    </ParameterList>
  </ParameterList>
  <ParameterList name="verbose object" type="ParameterList">
    <Parameter name="verbosity level" type="string" value="low" />
  </ParameterList>
</ParameterList>
